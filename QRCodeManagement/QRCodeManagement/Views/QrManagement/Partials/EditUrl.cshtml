@using QRCodeManagement.Models

@model QrCodeModel

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Update your QR Code</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row main-container create-container qr-template">
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body">
				<form id="createUrlForm" data-toggle="validator" method="post" action="@Url.Action(MVC.QrManagement.UpdateUrl())" role="form">
					<!-- Tab panes -->
					<div class="tab-content">
						<div class="tab-pane fade active in">
							@{ Html.RenderPartial(MVC.QrManagement.Views.Partials.QrHiddenField);}
							<div class="forms">
								<div class="form-group">
									<label for="label" class="control-label">Label</label>
									<input value="@Model.Label" id="label" name="label" type="text" minlength="5" placeholder="QR Code Label" class="form-control" data-error="Please input as least 5 characters" required>
									<div class="help-block with-errors"></div>
								</div>
								<div class="form-group has-feedback">
									<label for="urlText" class="control-label">Website</label>
									<div class="input-group">
										<span class="input-group-addon">URL</span>
										<input value = "@Model.TargetUrl" id="urlText" name="urlText" placeholder="#" type="url" class="form-control" required>
									</div>
									<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
								</div>
								@{ Html.RenderPartial(MVC.QrManagement.Views.Partials.QrTemplate, Model); }
							</div>
						</div>
					</div>
					<div class="create-qr-code">
						<a href="@Url.Action(MVC.QrManagement.Manage())" class="btn btn-default go-back">Go Back</a>
						<button type="submit" class="btn btn-success"><i class="fa fa-pencil-square-o"></i>Update QR code</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	@{ Html.RenderPartial(MVC.QrManagement.Views.Partials.QrPreview);}
</div>
<!-- /.row -->
