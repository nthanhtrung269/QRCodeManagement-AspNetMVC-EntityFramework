@using QRCodeManagement.Models

@model QrCodeModel

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Create your QR code</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row main-container create-container qr-template">
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body">
				<!-- Nav tabs -->
				<ul class="nav nav-pills">
					<li class="active">
						<a href="@Url.Action(MVC.QrManagement.Create())"><i class="fa fa-check"></i>URL</a>
					</li>
					<li>
						<a href="@Url.Action(MVC.QrManagement.Create(type: 1))"><i class="fa fa-dropbox"></i>VCard</a>
					</li>
					<li>
						<a href="@Url.Action(MVC.QrManagement.Create(type: 2))"><i class="fa fa-file-pdf-o"></i>File</a>
					</li>
				</ul>

				<form id="createUrlForm" data-toggle="validator" method="post" action="@Url.Action(MVC.QrManagement.CreateUrl())" role="form">
					<!-- Tab panes -->
					<div class="tab-content">
						<div class="tab-pane fade active in">
							@{ Html.RenderPartial(MVC.QrManagement.Views.Partials.QrHiddenField);}
							<div class="forms">
								<div class="form-group">
									<label for="label" class="control-label">Label</label>
									<input id="label" name="label" type="text" minlength="5" placeholder="QR Code Label" class="form-control" data-error="Please input as least 5 characters" required>
									<div class="help-block with-errors"></div>
								</div>
								<div class="form-group has-feedback">
									<label for="urlText" class="control-label">Website</label>
									<div class="input-group">
										<span class="input-group-addon">URL</span>
										<input id="urlText" name="urlText" placeholder="#" type="url" class="form-control" required>
									</div>
									<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
								</div>
								@{ Html.RenderPartial(MVC.QrManagement.Views.Partials.QrTemplate, Model); }
							</div>
						</div>
					</div>
					<div class="divider"></div>
					<div class="create-qr-code">
						<button id="createQrCode" type="submit" class="btn btn-success"><i class="fa fa-floppy-o icon-inner"></i>Save QR code</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	@{ Html.RenderPartial(MVC.QrManagement.Views.Partials.QrPreview);}
</div>
<!-- /.row -->
