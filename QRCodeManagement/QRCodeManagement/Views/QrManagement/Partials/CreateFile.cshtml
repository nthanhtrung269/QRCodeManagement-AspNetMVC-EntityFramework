@using QRCodeManagement.Constants
@using QRCodeManagement.Models

@model QrCodeModel

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Create your QR code</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row main-container create-container qr-template">
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body">
				<!-- Nav tabs -->
				<ul class="nav nav-pills">
					<li>
						<a href="@Url.Action(MVC.QrManagement.Create())"><i class="fa fa-check"></i>URL</a>
					</li>
					<li>
						<a href="@Url.Action(MVC.QrManagement.Create(type: 1))"><i class="fa fa-dropbox"></i>VCard</a>
					</li>
					<li class="active">
						<a href="@Url.Action(MVC.QrManagement.Create(type: 2))"><i class="fa fa-file-pdf-o"></i>File</a>
					</li>
				</ul>
				<form id="createFileForm" data-toggle="validator" method="post" action="@Url.Action(MVC.QrManagement.CreateFile())" role="form" enctype="multipart/form-data">
					@{ Html.RenderPartial(MVC.QrManagement.Views.Partials.QrHiddenField);}
					<!-- Tab panes -->
					<div class="tab-content">
						<div class="tab-pane fade active in">
							<div class="forms">
								<div class="form-group">
									<label for="label" class="control-label">Label</label>
									<input id="label" name="label" type="text" minlength="5" placeholder="QR Code Label" class="form-control" data-error="Please input as least 5 characters" required>
									<div class="help-block with-errors"></div>
								</div>
								<div class="row">
									<div class="col-md-12 form-group">
										<input id="imageUpload" name="fileType" type="radio" value="@QrFileType.Image" checked/>
										<label for="imageUpload">
											Upload Image <span class="italic-bold">(up to 5 MB)</span>
										</label>
									</div>
									<div class="col-md-12 form-group">
										<input id ="pdfUpload" name="fileType" type="radio" value="@QrFileType.PDF"/>
										<label for="pdfUpload">
											Upload PDF <span class="italic-bold">(up to 15 MB)</span>
										</label>
									</div>
								</div>
								<div class="row">
									<div class="col-md-12 form-group">
										<input class="form-control btn btn-default" id="fileUpload" name="fileUpload" type="file" accept="image/*" data-error="Please choose file to upload" required>
										<div class="help-block with-errors"></div>
									</div>
									
								</div>
								@{ Html.RenderPartial(MVC.QrManagement.Views.Partials.QrTemplate); }
							</div>
						</div>
					</div>
					<div class="create-qr-code">
						<button type="submit" class="btn btn-success"><i class="fa fa-floppy-o icon-inner"></i>Save QR code</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	@{ Html.RenderPartial(MVC.QrManagement.Views.Partials.QrPreview);}
</div>
<!-- /.row -->
