@model System.Web.Mvc.HandleErrorInfo

@{
	ViewBag.Title = ViewBag.Title ?? "Page not found";
	Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="msg-panel panel panel-danger">
			<div class="panel-heading">
				<h2 class="panel-title">@ViewBag.Title</h2>
			</div>
			<div class="panel-body">
				<fieldset>
					<div class="form-group">
						<p>
							@(ViewBag.errorMessage ?? "Sorry, we couldn't find that page. Please contact the system administrator.")
						</p>
						<a class="btn-link" href="@Url.Action(MVC.Account.Login())">Home page</a>
					</div>
				</fieldset>
			</div>
		</div>
	</div>
</div>

