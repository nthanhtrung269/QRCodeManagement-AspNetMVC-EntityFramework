@model QRCodeManagement.Models.MessageModels
@{
	Model.Title = Model.Title ?? "Success";
	Model.Message = Model.Message ?? "Your information was updated";
	Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">@Model.Title</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row main-container">
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body">
				@Html.Raw(Model.Message)
			</div>
		</div>
	</div>
</div>
