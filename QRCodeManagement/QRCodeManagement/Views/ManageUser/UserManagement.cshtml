@using Webdiyer.WebControls.Mvc
@{
	ViewBag.Title = "User Management";
	Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">User List</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row user-management-container">
	<div class="col-lg-12">
		<form action="@Url.Action(MVC.ManageUser.UserManagement())" role="form" class="search-form-container user-management-form" id="searchUserForm" method="get">
			<div class="input-group custom-search-form">
				<input type="text" id="keyword" name="keyword" class="form-control" placeholder="Search by email">
				<span class="input-group-btn">
					<button class="btn btn-default" type="submit">
						<i class="fa fa-search"></i>
					</button>
				</span>
			</div>
			<div class="input-group filter-group">
				<label class="margin-right-5"> Filter by: </label>
				<select class="margin-right-5" name="isBlock" id="isBlock">
					<option>All</option>
					<option value="false">Unblock</option>
					<option value="true">Blocked</option>
				</select>

				<select class="margin-right-5" name="isConfirm" id="isConfirm">
					<option>All</option>
					<option value="true">Confirmed</option>
					<option value="false">UnConfirm</option>
				</select>
			</div>
		</form>
		<div class="dataTable_wrapper" id="userList">
			@{Html.RenderPartial(MVC.ManageUser.Views.Partials.UserListPartial);}
		</div>
		<!-- /.table-responsive -->
		<div class="margin-top-20 margin-bottom-20">
			<a href="@Url.Action(MVC.ManageUser.CreateUser())" class="btn btn-success"><i class="fa fa-plus icon-inner"></i>Create New User</a>
		</div>
	</div>
</div>

@section BottomOfPageContent {
	@{Html.RegisterMvcPagerScriptResource();}
	@Scripts.Render("~/manage_account/js");
}
