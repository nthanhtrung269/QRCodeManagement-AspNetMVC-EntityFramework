@model QRCodeManagement.Models.ViewModels.CreateUserViewModel
@{
	ViewBag.Title = "Create User";
	Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Create User</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row main-container">
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body">
				<!-- Tab panes -->
				<div class="tab-content">
					<div class="tab-pane fade active in" id="home-pills">
						<form id="createUserForm" role="form" data-toggle="validator"class="forms" action="@Url.Action(MVC.ManageUser.CreateUser())" method="POST">
							@Html.AntiForgeryToken()
							@Html.ValidationSummary("", new { @class = "text-danger" })
							<div class="col-md-8 form-group">
								<label for="firstName" class="control-label">First Name</label>
								<input type="text" class="form-control" id="firstName" name="firstName" value="@(Model?.FirstName)" required>
							</div>
							<div class="col-md-8 form-group">
								<label for="lastName" class="control-label">Last Name</label>
								<input type="text" class="form-control" id="lastName" name="lastName" value="@(Model?.LastName)" required>
							</div>
							<div class="col-md-8 form-group">
								<label for="email" class="control-label">Email</label>
								<input type="email" class="form-control" id="email" name="email" value="@(Model?.Email)" required>
							</div>
							<div class="col-md-8 form-group">
								<button type="submit" class="btn btn-success"><i class="fa fa-pencil-square-o icon-inner"></i>Create User</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- /.row -->
