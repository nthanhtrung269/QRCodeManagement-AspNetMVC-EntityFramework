@model QRCodeManagement.Models.ViewModels.ChangePasswordViewModel
@{
	ViewBag.Title = "Change Password";
	Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Change Password</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row main-container">
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body">
				<form role="form" data-toggle="validator" action="@Url.Action(MVC.Account.ChangePassword())" method="POST">
					@Html.AntiForgeryToken()
					@Html.ValidationSummary("", new { @class = "text-danger" })
					<!-- Tab panes -->
					<div class="tab-content">
						<div class="tab-pane fade active in" id="home-pills">
							<div id="vcard_form" form="vcard" class="forms">
								<div class="row">
									<div class="col-md-6 form-group">
										<label for="oldPassword" class="control-label">Current password</label>
										<input type="password" class="form-control left" id="oldPassword" name="oldPassword" value="" required>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6 form-group">
										<label for="newPassword" class="control-label">New password</label>
										<input id="newPassword" name="newPassword" type="password" class="form-control left" required>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6 form-group">
										<label for="confirmPassword" class="control-label">Confirm new password</label>
										<input id="confirmPassword" name="confirmPassword" type="password" class="form-control left" required>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="margin-top-20">
						<button type="submit" class="btn btn-success"><i class="fa fa-pencil-square-o icon-inner"></i>Update password</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!-- /.row -->
@section BottomOfPageContent {
	@Scripts.Render("~/bundles/jqueryval")
}
