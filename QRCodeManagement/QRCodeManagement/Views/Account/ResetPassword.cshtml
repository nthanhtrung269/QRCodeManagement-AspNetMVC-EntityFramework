@model QRCodeManagement.Models.ViewModels.ResetPasswordViewModel
@{
	ViewBag.Title = "Reset password";
	Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form", data_toggle = "validator" }))
		{
			@Html.AntiForgeryToken()
			@Html.HiddenFor(model => model.Code)
			<div class="login-panel panel panel-green">
				<div class="panel-heading">
					<h3 class="panel-title">Reset your password.</h3>
				</div>
				<div class="panel-body">
					<fieldset>
						<div class="form-group">
							<input class="form-control" placeholder="E-mail" name="email" type="email" value="@(Model?.Email ?? "")" autofocus required>
						</div>
						<div class="form-group">
							<input class="form-control" placeholder="Password" name="password" type="password" value="" required>
							@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
						</div>
						<div class="form-group">
							<input class="form-control" placeholder="Confirm password" name="confirmPassword" type="password" value="" required>
							@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
						</div>
						<div class="form-group">
							<input type="submit" value="Reset" class="btn btn-lg btn-default btn-block" />
						</div>
					</fieldset>
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				</div>
			</div>
		}
	</div>
</div>

@section BottomOfPageContent {
	@Scripts.Render("~/bundles/jqueryval")
}
