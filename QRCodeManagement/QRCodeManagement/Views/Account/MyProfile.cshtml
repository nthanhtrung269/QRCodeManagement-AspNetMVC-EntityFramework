@model QRCodeManagement.Models.ApplicationUser
@{
	ViewBag.Title = "My Profile";
	Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">My Profile</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row main-container">
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body">
				<form role="form" data-toggle="validator" action="@Url.Action(MVC.Account.UpdateMyProfile())">
					<!-- Tab panes -->
					<div class="tab-content">
						<div class="tab-pane fade active in" id="home-pills">
							<div id="vcard_form" form="vcard" class="forms">
								<div class="col-md-8 form-group">
									<label for="firstName" class="control-label">First Name</label>
									<input type="text" class="form-control" id="firstName" name="firstName" value="@Model.FirstName" required>
								</div>
								<div class="col-md-8 form-group">
									<label for="lastName" class="control-label">Last Name</label>
									<input type="text" class="form-control" id="lastName" name="lastName" value="@Model.LastName" required>
								</div>
								<div class="col-md-8 form-group">
									<label for="createdDate" class="control-label">Created Date</label>
									<input type="text" class="form-control" id="createdDate" value="@Model.CreatedDate" disabled="disabled">
								</div>
								<div class="col-md-8 form-group">
									<label for="latestLogin" class="control-label">Latest Login</label>
									<input type="text" class="form-control" id="latestLogin" value="@Model.LastLogin" disabled="disabled">
								</div>
								<div class="col-md-8 form-group">
									<label for="email" class="control-label">Email</label>
									<input type="email" class="form-control" id="email" value="@Model.Email" disabled="disabled">
								</div>
								<div class="col-md-8 form-group">
									<button type="submit" class="btn btn-success"><i class="fa fa-pencil-square-o icon-inner"></i>Update profile</button>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
