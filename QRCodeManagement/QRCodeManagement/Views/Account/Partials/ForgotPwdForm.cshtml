@model QRCodeManagement.Models.ViewModels.LoginViewModel

<section id="forgotPwdForm">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form", data_toggle = "validator" }))
			{
				@Html.AntiForgeryToken()
				<div class="login-panel panel panel-green">
					<div class="panel-heading">
						<h3 class="panel-title">Enter your email to request</h3>
					</div>
					<div class="panel-body">
						<div class="form-group">
							<input class="form-control js-email-forgotpwd" data-error="Please input your email" placeholder="E-mail" name="email" type="email" required>
							<div class="help-block with-errors"></div>
						</div>
						<div class="form-group">
							<input id="submitEmail" type="submit" value="Send email to me" class="btn btn-lg btn-default btn-block" />
						</div>
						<div class="form-group">
							<a class="btn-link" href="@Url.Action(MVC.Account.Login())">Back to login</a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>

